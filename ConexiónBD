package modelo;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class ConexionBD {
    private Connection conexion;

    public Connection conectar() {
        try {
            conexion = DriverManager.getConnection("jdbc:mysql://localhost/estudiantesdb", "root", "");
            System.out.println(" ConexiÃ³n exitosa a la base de datos");
        } catch (SQLException e) {
            System.out.println(" Error al conectar: " + e.getMessage());
        }
        return conexion;
    }

    public void desconectar() {
        try {
            if (conexion != null) {
                conexion.close();
                System.out.println("ðŸ”Œ ConexiÃ³n cerrada");
            }
        } catch (SQLException e) {
            System.out.println(" Error al cerrar la conexiÃ³n: " + e.getMessage());
        }
    }
}
